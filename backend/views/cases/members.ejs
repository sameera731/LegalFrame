<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LegalFrame</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #3b0a45, #a1027e);
            min-height: 100vh;
        }
        .main-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            margin: 20px;
            padding: 30px;
        }
        .member-card {
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            background: #f8f9fa;
        }
        .role-badge {
            font-size: 0.8em;
        }
        .btn-purple {
            background: linear-gradient(135deg, #6a0572, #9d0191);
            border: none;
            color: white;
        }
        .btn-purple:hover {
            background: linear-gradient(135deg, #5a0462, #8d0181);
            color: white;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">LegalFrame</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/cases">Cases</a>
                <a class="nav-link" href="/auth/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="main-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2><i class="fas fa-users"></i> <%= title %></h2>
                <p class="text-muted mb-0">Case: <%= caseItem.title %></p>
            </div>
            <div>
                <a href="/cases/<%= caseItem.case_id %>/tasks" class="btn btn-outline-success me-2">
                    <i class="fas fa-tasks"></i> View Tasks
                </a>
                <button class="btn btn-outline-warning me-2" onclick="quickAddTask('<%= caseItem.case_id %>', '<%= caseItem.title %>')">
                    <i class="fas fa-plus"></i> Quick Add Task
                </button>
                <a href="/cases" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Cases
                </a>
            </div>
        </div>

        <!-- Add Member Form -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user-plus"></i> Add New Member</h5>
            </div>
            <div class="card-body">
                <form id="addMemberForm">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="user_id" class="form-label">Select User</label>
                            <select class="form-select" id="user_id" name="user_id" required>
                                <option value="">Choose a user...</option>
                                <% availableUsers.forEach(user => { %>
                                    <option value="<%= user.user_id %>">
                                        <%= user.first_name %> <%= user.last_name %> (<%= user.email %>) - <%= user.role %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="role_in_case" class="form-label">Role in Case</label>
                            <select class="form-select" id="role_in_case" name="role_in_case" required>
                                <option value="Associate">Associate</option>
                                <option value="Lead">Lead</option>
                                <option value="Paralegal">Paralegal</option>
                                <option value="Client">Client</option>
                                <option value="Observer">Observer</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-purple w-100">
                                <i class="fas fa-plus"></i> Add
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Current Members -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-users"></i> Current Members (<%= members.length %>)</h5>
            </div>
            <div class="card-body">
                <% if (members.length > 0) { %>
                    <div class="row">
                        <% members.forEach(member => { %>
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="member-card">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <%= member.first_name %> <%= member.last_name %>
                                                <% if (member.user_id === currentUser.id) { %>
                                                    <small class="text-muted">(You)</small>
                                                <% } %>
                                            </h6>
                                            <p class="text-muted mb-1 small">
                                                <i class="fas fa-envelope"></i> <%= member.email %>
                                            </p>
                                            <p class="text-muted mb-1 small">
                                                <i class="fas fa-briefcase"></i> <%= member.user_role %>
                                            </p>
                                            <span class="badge bg-primary role-badge">
                                                <i class="fas fa-user-tag"></i> <%= member.role_in_case %>
                                            </span>
                                        </div>
                                        <% if (member.user_id !== currentUser.id) { %>
                                            <button class="btn btn-sm btn-outline-danger" 
                                                    onclick="removeMember('<%= member.user_id %>', '<%= member.first_name %> <%= member.last_name %>')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No members added yet. Add members using the form above.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Quick Add Task Modal -->
    <div class="modal fade" id="quickAddTaskModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Quick Add Task</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="quickAddTaskForm">
                    <div class="modal-body">
                        <input type="hidden" id="quickTaskCaseId" name="case_id">
                        <div class="mb-3">
                            <label for="quickTaskTitle" class="form-label">Task Title *</label>
                            <input type="text" class="form-control" id="quickTaskTitle" name="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="quickTaskDescription" class="form-label">Description</label>
                            <textarea class="form-control" id="quickTaskDescription" name="description" rows="3"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="quickTaskAssignee" class="form-label">Assignee</label>
                                <select class="form-select" id="quickTaskAssignee" name="assignee_id">
                                    <option value="">Unassigned</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="quickTaskPriority" class="form-label">Priority</label>
                                <select class="form-select" id="quickTaskPriority" name="priority">
                                    <option value="Low">Low</option>
                                    <option value="Medium" selected>Medium</option>
                                    <option value="High">High</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-purple">Add Task</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('addMemberForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            fetch(`/cases/<%= caseItem.case_id %>/members`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error adding member: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error adding member');
            });
        });

        function removeMember(userId, userName) {
            if (confirm(`Are you sure you want to remove ${userName} from this case?`)) {
                fetch(`/cases/<%= caseItem.case_id %>/members/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error removing member: ' + (data.error || 'Unknown error'));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error removing member');
                });
            }
        }

        function quickAddTask(caseId, caseTitle) {
            document.getElementById('quickTaskCaseId').value = caseId;
            document.querySelector('#quickAddTaskModal .modal-title').textContent = `Add Task to: ${caseTitle}`;
            
            // Load case members for assignment
            fetch(`/api/cases/${caseId}/members`)
                .then(response => response.json())
                .then(members => {
                    const select = document.getElementById('quickTaskAssignee');
                    select.innerHTML = '<option value="">Unassigned</option>';
                    members.forEach(member => {
                        const option = document.createElement('option');
                        option.value = member.user_id;
                        option.textContent = `${member.first_name} ${member.last_name}`;
                        select.appendChild(option);
                    });
                })
                .catch(error => {
                    console.error('Error loading members:', error);
                });
            
            new bootstrap.Modal(document.getElementById('quickAddTaskModal')).show();
        }

        // Quick Add Task Form
        document.getElementById('quickAddTaskForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            const caseId = data.case_id;
            
            fetch(`/cases/${caseId}/tasks`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Error adding task: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error adding task');
            });
        });
    </script>
</body>
</html>
